<Window
    x:Class="Family_Library.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:Family_Library.UI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="Perekonnateek"
    Width="1100"
    Height="700"
    MinWidth="900"
    MinHeight="600"
    AllowsTransparency="True"
    Background="Transparent"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">


    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--  Material Design default theme  -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ComboBox.xaml" />
                <!--  Material Design dark theme  -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Dark.xaml" />

                <!--  ElementStyles uses those brushes  -->
                <ResourceDictionary Source="pack://application:,,,/Family_Library;component/Revit/UI/Themes/ElementStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>



            <!--  Converter  -->
            <conv:StringListToTextConverter x:Key="TypeListConverter" />
        </ResourceDictionary>
    </Window.Resources>

    <Grid Background="Transparent" ClipToBounds="True">

        <!--  Outer blurred border  -->
        <Border
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="2"
            CornerRadius="10"
            Opacity="0.70"
            SnapsToDevicePixels="True">
            <Border.Effect>
                <BlurEffect KernelType="Gaussian" Radius="2" />
            </Border.Effect>
        </Border>

        <!--  Main container  -->
        <Border
            Margin="2"
            Background="{DynamicResource PrimaryBackgroundBrush}"
            ClipToBounds="True"
            CornerRadius="10">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  =========================  -->
                <!--  Title bar row  -->
                <!--  =========================  -->
                <Grid
                    Grid.Row="0"
                    Background="Transparent"
                    MouseDown="TitleBar_MouseDown">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--  Title  -->
                    <TextBlock
                        Grid.Column="0"
                        Margin="10,0,10,0"
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="{DynamicResource ForegroundBrush}"
                        Text="Perekonnateek" />

                    <!--  Search bar (like EliteSheets)  -->
                    <Border
                        Grid.Column="1"
                        Width="100"
                        Height="24"
                        Margin="0,0,160,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Background="{DynamicResource SecondaryBackgroundBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Opacity="0.95">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="28" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="28" />
                            </Grid.ColumnDefinitions>

                            <materialDesign:PackIcon
                                Grid.Column="0"
                                Width="16"
                                Height="16"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="{DynamicResource IconBrush}"
                                Kind="Magnify" />

                            <TextBox
                                x:Name="SearchTextBox"
                                Grid.Column="1"
                                Margin="0"
                                VerticalContentAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                CaretBrush="{DynamicResource ForegroundBrush}"
                                FontSize="12"
                                Foreground="{DynamicResource ForegroundBrush}"
                                Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                ToolTip="Otsi (nimi / kategooria / failitee / tüübid)" />

                            <Button
                                x:Name="ClearSearchButton"
                                Grid.Column="2"
                                Width="24"
                                Height="24"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Click="ClearSearchButton_Click"
                                Style="{StaticResource FlatIconButton}"
                                ToolTip="Puhasta otsing">
                                <materialDesign:PackIcon
                                    Width="16"
                                    Height="16"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Foreground="{DynamicResource IconBrush}"
                                    Kind="CloseCircleOutline" />
                            </Button>
                        </Grid>
                    </Border>

                    <!--  Window buttons  -->
                    <StackPanel
                        Grid.Column="2"
                        Margin="0,0,6,0"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">

                        <!--  Minimize  -->
                        <Button
                            Width="19"
                            Height="19"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Click="MinimizeButton_Click"
                            ToolTip="Minimeeri">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Grid Background="Transparent">
                                        <materialDesign:PackIcon
                                            x:Name="MinimizeIcon"
                                            Width="20"
                                            Height="20"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Foreground="{DynamicResource IconBrush}"
                                            Kind="MinusCircleOutline" />
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="MinimizeIcon" Property="Foreground" Value="#20C997" />
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="MinimizeIcon" Property="Foreground" Value="#158D6A" />
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter TargetName="MinimizeIcon" Property="Opacity" Value="0.35" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!--  Close  -->
                        <Button
                            Width="35"
                            Height="19"
                            Margin="4,0,0,0"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Click="CloseButton_Click"
                            ToolTip="Sulge">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Grid Background="Transparent">
                                        <materialDesign:PackIcon
                                            x:Name="CloseIcon"
                                            Width="20"
                                            Height="20"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Foreground="{DynamicResource IconBrush}"
                                            Kind="CloseCircleOutline" />
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="CloseIcon" Property="Foreground" Value="#DC6B6B" />
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="CloseIcon" Property="Foreground" Value="#B42C2C" />
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter TargetName="CloseIcon" Property="Opacity" Value="0.35" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                    </StackPanel>
                </Grid>

                <!--  =========================  -->
                <!--  Content  -->
                <!--  =========================  -->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border
                        Margin="10"
                        Background="Transparent"
                        CornerRadius="10">

                        <TabControl ItemContainerStyle="{StaticResource DarkTabItem}" Style="{StaticResource DarkTabControl}">
                            <!--  =====================  -->
                            <!--  KOGU  -->
                            <!--  =====================  -->
                            <TabItem Margin="20,10,-21,-13" Header="Kogu">
                                <Grid Margin="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!--  Filters row  -->
                                    <Border
                                        Grid.Row="0"
                                        Margin="0,0,0,10"
                                        Padding="10"
                                        Background="{DynamicResource SecondaryBackgroundBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="240" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock
                                                Grid.Column="0"
                                                Margin="0,0,10,0"
                                                VerticalAlignment="Center"
                                                Foreground="{DynamicResource ForegroundBrush}"
                                                Text="Kasutajakategooria:" />

                                            <ComboBox
                                                Grid.Column="1"
                                                Height="24"
                                                VerticalContentAlignment="Center"
                                                ItemsSource="{Binding UserCategories}"
                                                SelectedItem="{Binding SelectedFilterCategory, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                Style="{StaticResource DarkThemeComboBox}"
                                                ToolTip="Filtreeri loendit kasutajakategooria järgi" />

                                            <Button
                                                Grid.Column="2"
                                                Width="140"
                                                Height="28"
                                                HorizontalAlignment="Right"
                                                Command="{Binding RefreshCommand}"
                                                Content="Värskenda"
                                                Style="{StaticResource CustomActionButtonStyle}"
                                                ToolTip="Lae indeks uuesti ja rakenda filtrid" />
                                        </Grid>
                                    </Border>

                                    <!--  List  -->
                                    <Border
                                        Grid.Row="1"
                                        Padding="8"
                                        Background="{DynamicResource SecondaryBackgroundBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="10">
                                        <ListView
                                            d:ItemsSource="{d:SampleData ItemCount=5}"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            ItemsSource="{Binding Items}"
                                            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                                            SelectedItem="{Binding SelectedItem}"
                                            SelectionChanged="LibraryList_SelectionChanged"
                                            SelectionMode="Extended">


                                            <ListView.ItemContainerStyle>
                                                <Style TargetType="{x:Type ListViewItem}">
                                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                                    <Setter Property="VerticalContentAlignment" Value="Stretch" />
                                                    <Setter Property="Padding" Value="0" />
                                                </Style>
                                            </ListView.ItemContainerStyle>
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <Border
                                                        Margin="0,0,0,0"
                                                        Padding="10"
                                                        Background="{DynamicResource PrimaryBackgroundBrush}"
                                                        BorderBrush="{DynamicResource BorderBrush}"
                                                        BorderThickness="1"
                                                        CornerRadius="10">

                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="110" />
                                                                <ColumnDefinition Width="*" />
                                                                <ColumnDefinition Width="320" />
                                                            </Grid.ColumnDefinitions>

                                                            <!--  Thumbnail  -->
                                                            <Border
                                                                Grid.Column="0"
                                                                Width="100"
                                                                Height="100"
                                                                Background="{DynamicResource SecondaryBackgroundBrush}"
                                                                BorderBrush="{DynamicResource BorderBrush}"
                                                                BorderThickness="1"
                                                                CornerRadius="8">
                                                                <Image Source="{Binding ThumbnailPath}" Stretch="Uniform" />
                                                            </Border>

                                                            <!--  Info  -->
                                                            <StackPanel Grid.Column="1" Margin="12,0,12,0">
                                                                <TextBlock
                                                                    FontSize="15"
                                                                    FontWeight="Bold"
                                                                    Foreground="{DynamicResource ForegroundBrush}"
                                                                    Text="{Binding DisplayName}" />

                                                                <StackPanel Margin="0,4,0,0" Orientation="Horizontal">
                                                                    <TextBlock
                                                                        Foreground="{DynamicResource ForegroundBrush}"
                                                                        Opacity="0.80"
                                                                        Text="{Binding Category}" />
                                                                    <TextBlock
                                                                        Foreground="{DynamicResource ForegroundBrush}"
                                                                        Opacity="0.40"
                                                                        Text="  |  " />
                                                                    <TextBlock
                                                                        Foreground="{DynamicResource ForegroundBrush}"
                                                                        Opacity="0.70"
                                                                        Text="{Binding RelativePath}" />
                                                                </StackPanel>

                                                                <TextBlock
                                                                    Margin="0,8,0,0"
                                                                    Foreground="{DynamicResource ForegroundBrush}"
                                                                    Opacity="0.85"
                                                                    Text="{Binding TypeNames, Converter={StaticResource TypeListConverter}}"
                                                                    TextWrapping="Wrap" />
                                                            </StackPanel>

                                                            <!--  User categories (multi)  -->
                                                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                                                <TextBlock
                                                                    Margin="0,0,0,6"
                                                                    FontWeight="Bold"
                                                                    Foreground="{DynamicResource ForegroundBrush}"
                                                                    Text="Kasutajakategooriad" />

                                                                <xctk:CheckComboBox
                                                                    Height="24"
                                                                    ItemsSource="{Binding DataContext.UserCategories, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                    SelectedItemsOverride="{Binding UserCategories}"
                                                                    Style="{StaticResource DarkCheckComboBox}" />

                                                            </StackPanel>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </Border>

                                    <!--  Bottom bar  -->
                                    <Border
                                        Grid.Row="2"
                                        Margin="0,10,0,0"
                                        Padding="10"
                                        Background="{DynamicResource SecondaryBackgroundBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <CheckBox
                                                Grid.Column="0"
                                                VerticalAlignment="Center"
                                                Content="Pärast laadimist aktiveeri paigutus"
                                                IsChecked="{Binding PlaceAfterLoading}"
                                                Style="{StaticResource CustomCheckBox}" />

                                            <Button
                                                Grid.Column="1"
                                                Width="180"
                                                Height="40"
                                                Command="{Binding LoadSelectedCommand}"
                                                Content="Laadi valitud"
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Style="{StaticResource CustomActionButtonStyle}" />
                                        </Grid>
                                    </Border>
                                </Grid>
                            </TabItem>

                            <!--  =====================  -->
                            <!--  SEADED  -->
                            <!--  =====================  -->
                            <TabItem Margin="20,10,-20,-13" Header="Seaded">
                                <Grid Margin="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <!--  Library root  -->
                                    <Border
                                        Grid.Row="0"
                                        Margin="0,0,0,10"
                                        Padding="10"
                                        Background="{DynamicResource SecondaryBackgroundBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="120" />
                                            </Grid.ColumnDefinitions>

                                            <TextBox
                                                Grid.Column="0"
                                                Height="28"
                                                VerticalContentAlignment="Center"
                                                Style="{StaticResource CustomTextBoxStyle}"
                                                Text="{Binding LibraryRoot}"
                                                ToolTip="Teegi juurkaust" />

                                            <Button
                                                Grid.Column="1"
                                                Width="100"
                                                Height="28"
                                                Margin="10,0,0,0"
                                                Command="{Binding BrowseLibraryRootCommand}"
                                                Content="Sirvi"
                                                Style="{StaticResource CustomActionButtonStyle}" />
                                        </Grid>
                                    </Border>

                                    <!--  Thumbnail + index actions  -->
                                    <Border
                                        Grid.Row="1"
                                        Margin="0,0,0,10"
                                        Padding="10"
                                        Background="{DynamicResource SecondaryBackgroundBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="240" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <TextBox
                                                Grid.Column="0"
                                                Height="28"
                                                VerticalContentAlignment="Center"
                                                Style="{StaticResource CustomTextBoxStyle}"
                                                Text="{Binding ThumbnailPixelSize}"
                                                ToolTip="Pisipildi suurus pikslites" />

                                            <StackPanel
                                                Grid.Column="1"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                Orientation="Horizontal">
                                                <Button
                                                    Width="180"
                                                    Height="34"
                                                    Margin="0,0,10,0"
                                                    Command="{Binding BuildIndexCommand}"
                                                    Content="Koosta indeks"
                                                    Style="{StaticResource CustomActionButtonStyle}" />
                                                <Button
                                                    Width="260"
                                                    Height="34"
                                                    Margin="0,0,0,0"
                                                    Command="{Binding GenerateThumbsAndIndexCommand}"
                                                    Content="Genereeri pisipildid + indeks"
                                                    Style="{StaticResource CustomActionButtonStyle}" />
                                            </StackPanel>
                                        </Grid>
                                    </Border>

                                    <!--  User categories manager  -->
                                    <Grid Grid.Row="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="420" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <Border
                                            Grid.Column="0"
                                            Padding="10"
                                            Background="{DynamicResource SecondaryBackgroundBrush}"
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="10">

                                            <StackPanel>
                                                <TextBlock
                                                    Margin="0,0,0,10"
                                                    FontSize="16"
                                                    FontWeight="Bold"
                                                    Foreground="{DynamicResource ForegroundBrush}"
                                                    Text="Kasutajakategooriad" />

                                                <DockPanel Margin="0,0,0,10">
                                                    <TextBox
                                                        Width="260"
                                                        Height="28"
                                                        VerticalContentAlignment="Center"
                                                        Style="{StaticResource CustomTextBoxStyle}"
                                                        Text="{Binding NewUserCategory, UpdateSourceTrigger=PropertyChanged}"
                                                        ToolTip="Lisa uus kategooria" />
                                                    <Button
                                                        Width="120"
                                                        Height="28"
                                                        Margin="10,0,0,0"
                                                        Command="{Binding AddUserCategoryCommand}"
                                                        Content="Lisa"
                                                        Style="{StaticResource CustomActionButtonStyle}" />
                                                </DockPanel>

                                                <ListBox
                                                    Height="260"
                                                    Background="{DynamicResource PrimaryBackgroundBrush}"
                                                    BorderBrush="{DynamicResource BorderBrush}"
                                                    BorderThickness="1"
                                                    Foreground="{DynamicResource ForegroundBrush}"
                                                    ItemsSource="{Binding UserCategories}"
                                                    SelectedItem="{Binding SelectedUserCategory, Mode=TwoWay}" />

                                                <Button
                                                    Height="32"
                                                    Margin="0,10,0,0"
                                                    Command="{Binding RemoveUserCategoryCommand}"
                                                    Content="Eemalda valitud"
                                                    Style="{StaticResource CustomActionButtonStyle}" />
                                            </StackPanel>
                                        </Border>

                                        <Border
                                            Grid.Column="1"
                                            Margin="10,0,0,0"
                                            Padding="10"
                                            Background="{DynamicResource SecondaryBackgroundBrush}"
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="10">
                                            <StackPanel>
                                                <TextBlock
                                                    Margin="0,0,0,10"
                                                    FontSize="16"
                                                    FontWeight="Bold"
                                                    Foreground="{DynamicResource ForegroundBrush}"
                                                    Text="Märkused" />

                                                <TextBlock
                                                    Foreground="{DynamicResource ForegroundBrush}"
                                                    Opacity="0.85"
                                                    Text="Kasutajakategooriad salvestatakse faili settings.json. Iga perekonna real saab valida mitu kategooriat ning need salvestatakse index.json faili."
                                                    TextWrapping="Wrap" />

                                                <TextBlock
                                                    Margin="0,10,0,0"
                                                    Foreground="{DynamicResource ForegroundBrush}"
                                                    Opacity="0.75"
                                                    Text="Soovitus: hoia kategooriate nimekiri lühike ja ühtses vormis (nt “Valgustid”, “Pistikupesad”, “Kaablirennid”)."
                                                    TextWrapping="Wrap" />
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                </Grid>
                            </TabItem>
                        </TabControl>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <!--  Resize edges (same pattern you use)  -->
        <Border
            x:Name="LeftEdge"
            Width="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Stretch"
            Background="Transparent"
            Cursor="SizeWE"
            MouseEnter="LeftEdge_MouseEnter"
            MouseLeave="Edge_MouseLeave"
            MouseLeftButtonDown="LeftEdge_MouseLeftButtonDown" />

        <Border
            x:Name="RightEdge"
            Width="9"
            HorizontalAlignment="Right"
            VerticalAlignment="Stretch"
            Background="Transparent"
            Cursor="SizeWE"
            MouseEnter="RightEdge_MouseEnter"
            MouseLeave="Edge_MouseLeave"
            MouseLeftButtonDown="RightEdge_MouseLeftButtonDown" />

        <Border
            x:Name="BottomEdge"
            Height="5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Bottom"
            Background="Transparent"
            Cursor="SizeNS"
            MouseEnter="BottomEdge_MouseEnter"
            MouseLeave="Edge_MouseLeave"
            MouseLeftButtonDown="BottomEdge_MouseLeftButtonDown" />

        <Border
            x:Name="BottomLeftCorner"
            Width="10"
            Height="10"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Background="Transparent"
            Cursor="SizeNESW"
            MouseEnter="BottomLeftCorner_MouseEnter"
            MouseLeave="Edge_MouseLeave"
            MouseLeftButtonDown="BottomLeftCorner_MouseLeftButtonDown" />

        <Border
            x:Name="BottomRightCorner"
            Width="10"
            Height="10"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Background="Transparent"
            Cursor="SizeNWSE"
            MouseEnter="BottomRightCorner_MouseEnter"
            MouseLeave="Edge_MouseLeave"
            MouseLeftButtonDown="BottomRightCorner_MouseLeftButtonDown" />

    </Grid>
</Window>
