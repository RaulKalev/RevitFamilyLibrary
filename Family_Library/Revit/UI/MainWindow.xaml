<Window
    x:Class="Family_Library.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:Family_Library.UI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="Perekonnateek"
    Width="800"
    Height="1000"
    MinWidth="750"
    MinHeight="600"
    AllowsTransparency="True"
    Background="Transparent"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">


    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--  Material Design default theme  -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ComboBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ToggleButton.xaml" />
                <!--  Material Design dark theme  -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Dark.xaml" />

                <!--  ElementStyles uses those brushes  -->
                <ResourceDictionary Source="pack://application:,,,/Family_Library;component/Revit/UI/Themes/ElementStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

            <conv:HoverAndMultiThumbsToVisibilityConverter x:Key="HoverAndMultiThumbsToVisibilityConverter" />
            <conv:PlusOneConverter x:Key="PlusOneConverter" />
            <conv:PathToImageConverter x:Key="PathToImageConverter" />

            <!--  Converter  -->
            <conv:StringListToTextConverter x:Key="TypeListConverter" />
            <conv:TupleConverter x:Key="TupleConverter" />
            <conv:IsCategoryAssignedConverter x:Key="IsCategoryAssignedConverter" />
        </ResourceDictionary>
    </Window.Resources>

    <Grid Background="Transparent" ClipToBounds="True">

        <!--  Outer blurred border  -->
        <Border
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="2"
            CornerRadius="10"
            Opacity="0.70"
            SnapsToDevicePixels="True">
            <Border.Effect>
                <BlurEffect KernelType="Gaussian" Radius="2" />
            </Border.Effect>
        </Border>

        <!--  Main container  -->
        <Border
            Margin="2"
            Background="{DynamicResource PrimaryBackgroundBrush}"
            ClipToBounds="True"
            CornerRadius="10">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  =========================  -->
                <!--  Title bar row  -->
                <!--  =========================  -->
                <Grid
                    Grid.Row="0"
                    Background="Transparent"
                    MouseDown="TitleBar_MouseDown">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--  Title  -->
                    <TextBlock
                        Grid.Column="0"
                        Margin="10,0,10,0"
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="{DynamicResource ForegroundBrush}"
                        Text="Perekonnateek" />



                    <!--  Window buttons  -->
                    <StackPanel
                        Grid.Column="2"
                        Margin="0,0,6,0"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">

                        <!--  Minimize  -->
                        <Button
                            Width="19"
                            Height="19"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Click="MinimizeButton_Click"
                            ToolTip="Minimeeri">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Grid Background="Transparent">
                                        <materialDesign:PackIcon
                                            x:Name="MinimizeIcon"
                                            Width="20"
                                            Height="20"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Foreground="{DynamicResource IconBrush}"
                                            Kind="MinusCircleOutline" />
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="MinimizeIcon" Property="Foreground" Value="#20C997" />
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="MinimizeIcon" Property="Foreground" Value="#158D6A" />
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter TargetName="MinimizeIcon" Property="Opacity" Value="0.35" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!--  Close  -->
                        <Button
                            Width="35"
                            Height="19"
                            Margin="4,0,0,0"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Click="CloseButton_Click"
                            ToolTip="Sulge">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Grid Background="Transparent">
                                        <materialDesign:PackIcon
                                            x:Name="CloseIcon"
                                            Width="20"
                                            Height="20"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Foreground="{DynamicResource IconBrush}"
                                            Kind="CloseCircleOutline" />
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="CloseIcon" Property="Foreground" Value="#DC6B6B" />
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="CloseIcon" Property="Foreground" Value="#B42C2C" />
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter TargetName="CloseIcon" Property="Opacity" Value="0.35" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                    </StackPanel>
                </Grid>

                <!--  =========================  -->
                <!--  Content  -->
                <!--  =========================  -->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border
                        Margin="10"
                        Background="Transparent"
                        CornerRadius="10">

                        <TabControl ItemContainerStyle="{StaticResource DarkTabItem}" Style="{StaticResource DarkTabControl}">
                            <!--  =====================  -->
                            <!--  KOGU  -->
                            <!--  =====================  -->
                            <TabItem x:Name="KoguTab" Header="Kogu" Margin="-2,0,0,0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!--  Filters row  -->
                                    <Border
                                        Grid.Row="0"
                                        Margin="0,0,0,10"
                                        Padding="10"
                                        Background="{DynamicResource SecondaryBackgroundBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="0,10,10,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock
                                                Grid.Column="0"
                                                Margin="0,0,10,0"
                                                VerticalAlignment="Center"
                                                Foreground="{DynamicResource ForegroundBrush}"
                                                Text="Filtrid:" />

                                            <Border
                                                Grid.Column="1"
                                                Height="28"
                                                Width="150"
                                                CornerRadius="6">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="{DynamicResource SecondaryBackgroundBrush}" />
                                                        <Setter Property="BorderThickness" Value="1" />
                                                        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
                                                        <Style.Triggers>
                                                            <!-- Wrapper Glow Trigger -->
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="BorderBrush" Value="#FFAAAAAA" />
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <ComboBox
                                                    BorderThickness="0"
                                                    Background="Transparent"
                                                    VerticalContentAlignment="Center"
                                                    ItemsSource="{Binding UserCategories}"
                                                    SelectedItem="{Binding SelectedFilterCategory, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    Style="{StaticResource DarkThemeComboBox}"
                                                    ToolTip="Filtreeri loendit kasutajakategooria järgi" />
                                            </Border>

                                            <!--  Tag Filters (EL, EN, EA)  -->
                                            <StackPanel
                                                Grid.Column="2"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                Orientation="Horizontal"
                                                Margin="20,0,0,0">
                                                


                                                <CheckBox
                                                    Content="EL"
                                                    FontSize="14"
                                                    IsChecked="{Binding IsElChecked}"
                                                    Margin="0,0,15,0"
                                                    Style="{StaticResource CustomCheckBox}"
                                                    ToolTip="Näita EL" />
                                                <CheckBox
                                                    Content="EN"
                                                    FontSize="14"
                                                    IsChecked="{Binding IsEnChecked}"
                                                    Margin="0,0,15,0"
                                                    Style="{StaticResource CustomCheckBox}" 
                                                    ToolTip="Näita EN"/>
                                                <CheckBox
                                                    Content="EA"
                                                    FontSize="14"
                                                    IsChecked="{Binding IsEaChecked}"
                                                    Style="{StaticResource CustomCheckBox}"
                                                    ToolTip="Näita EA"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                                                
                                                <!-- 3D/2D Toggle (Restyled) -->
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,15,0">
                                                    <TextBlock Text="3D" VerticalAlignment="Center" Foreground="{DynamicResource ForegroundBrush}" FontWeight="Bold" Margin="0,0,4,0" />
                                                    <ToggleButton
                                                        x:Name="ModeFilterToggle"
                                                        Width="30"
                                                        Height="30"
                                                        Background="Transparent"
                                                        BorderBrush="Transparent"
                                                        IsChecked="{Binding Is2DMode}"
                                                        ToolTip="Lülita 3D / 2D vahel">
                                                        <ToggleButton.Template>
                                                            <ControlTemplate TargetType="{x:Type ToggleButton}">
                                                                <Grid Background="Transparent">
                                                                    <materialDesign:PackIcon
                                                                        x:Name="ToggleIcon"
                                                                        Width="30"
                                                                        Height="30"
                                                                        HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center"
                                                                        Foreground="{DynamicResource IconBrush}"
                                                                        Kind="ToggleSwitchOffOutline" />
                                                                </Grid>
                                                                <ControlTemplate.Triggers>
                                                                    <!-- IsChecked = True => 2D Mode => Switch Right -->
                                                                    <Trigger Property="IsChecked" Value="True">
                                                                        <Setter TargetName="ToggleIcon" Property="Kind" Value="ToggleSwitch" />
                                                                    </Trigger>
                                                                    <!-- IsChecked = False => 3D Mode => Switch Left -->
                                                                    <Trigger Property="IsChecked" Value="False">
                                                                        <Setter TargetName="ToggleIcon" Property="Kind" Value="ToggleSwitchOffOutline" />
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </ToggleButton.Template>
                                                    </ToggleButton>
                                                    <TextBlock Text="2D" VerticalAlignment="Center" Foreground="{DynamicResource ForegroundBrush}" FontWeight="Bold" Margin="4,0,0,0" />
                                                </StackPanel>

                                                <!--  Search bar  -->
                                                <Border
                                                    Width="150"
                                                    Height="28"
                                                    Margin="0,0,10,0"
                                                    VerticalAlignment="Center"
                                                    Background="{DynamicResource SecondaryBackgroundBrush}"
                                                    BorderBrush="{DynamicResource BorderBrush}"
                                                    BorderThickness="1"
                                                    CornerRadius="8"
                                                    Opacity="0.95">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="28" />
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="28" />
                                                        </Grid.ColumnDefinitions>

                                                        <materialDesign:PackIcon
                                                            Grid.Column="0"
                                                            Width="16"
                                                            Height="16"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            Foreground="{DynamicResource IconBrush}"
                                                            Kind="Magnify" />

                                                        <TextBox
                                                            x:Name="SearchTextBox"
                                                            Grid.Column="1"
                                                            Margin="0"
                                                            VerticalContentAlignment="Center"
                                                            Background="Transparent"
                                                            BorderThickness="0"
                                                            CaretBrush="{DynamicResource ForegroundBrush}"
                                                            FontSize="14"
                                                            Foreground="{DynamicResource ForegroundBrush}"
                                                            Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                                            ToolTip="Otsi (nimi / kategooria / failitee / tüübid)" />

                                                        <Button
                                                            x:Name="ClearSearchButton"
                                                            Grid.Column="2"
                                                            Width="24"
                                                            Height="24"
                                                            Background="Transparent"
                                                            BorderBrush="Transparent"
                                                            Click="ClearSearchButton_Click"
                                                            Style="{StaticResource FlatIconButton}"
                                                            ToolTip="Puhasta otsing">
                                                            <materialDesign:PackIcon
                                                                Width="16"
                                                                Height="16"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"
                                                                Foreground="{DynamicResource IconBrush}"
                                                                Kind="CloseCircleOutline" />
                                                        </Button>
                                                    </Grid>
                                                </Border>

                                                <Button
                                                    Width="32"
                                                    Height="28"
                                                    Command="{Binding RefreshCommand}"
                                                    Style="{StaticResource FlatIconButton}"
                                                    ToolTip="Lae indeks uuesti ja rakenda filtrid">

                                                    <materialDesign:PackIcon
                                                        Width="24"
                                                        Height="24"
                                                        Foreground="{DynamicResource IconBrush}"
                                                        Kind="Refresh" />
                                                </Button>
                                            </StackPanel>

                                        </Grid>
                                    </Border>

                                    <!--  List  -->
                                    <Border
                                        Grid.Row="1"
                                        Padding="8"
                                        Background="{DynamicResource SecondaryBackgroundBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="10">
                                        <ListView
                                            d:ItemsSource="{d:SampleData ItemCount=5}"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            ItemsSource="{Binding Items}"
                                            PreviewMouseWheel="ListView_PreviewMouseWheel"
                                            ScrollViewer.CanContentScroll="False"
                                            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                            ScrollViewer.IsDeferredScrollingEnabled="False"
                                            ScrollViewer.PanningMode="Both"
                                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                                            SelectedItem="{Binding SelectedItem}"
                                            SelectionChanged="LibraryList_SelectionChanged"
                                            SelectionMode="Extended">


                                            <ListView.ItemContainerStyle>
                                                <Style TargetType="{x:Type ListViewItem}">
                                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                                    <Setter Property="VerticalContentAlignment" Value="Stretch" />
                                                    <Setter Property="Padding" Value="0" />
                                                    <Setter Property="Background" Value="Transparent" />
                                                    <Setter Property="BorderThickness" Value="0" />
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="{x:Type ListViewItem}">
                                                                <Border
                                                                    x:Name="ItemBorder"
                                                                    Background="Transparent"
                                                                    BorderThickness="0"
                                                                    SnapsToDevicePixels="True">
                                                                    <ContentPresenter />
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <!-- Selection trigger -->
                                                                    <Trigger Property="IsSelected" Value="True">
                                                                        <Setter TargetName="ItemBorder" Property="Background" Value="Transparent" />
                                                                    </Trigger>
                                                                    <!-- Hover trigger -->
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter TargetName="ItemBorder" Property="Background" Value="Transparent" />
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </ListView.ItemContainerStyle>
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <Border
                                                        x:Name="CardBorder"
                                                        Margin="0,0,0,5"
                                                        Padding="10"
                                                        Background="{DynamicResource PrimaryBackgroundBrush}"
                                                        BorderBrush="{DynamicResource PrimaryBackgroundBrush}"
                                                        BorderThickness="2"
                                                        CornerRadius="10"
                                                        Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=Window}}">
                                                        
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Style.Triggers>
                                                                    <!-- Hover trigger - only when not selected -->
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="BorderBrush" Value="#3A3F4B" />
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        
                                                        <Border.ContextMenu>
                                                            <ContextMenu 
                                                                Style="{StaticResource DarkContextMenu}"
                                                                ItemsSource="{Binding PlacementTarget.Tag.AllUserCategories, RelativeSource={RelativeSource Self}}">
                                                                <ContextMenu.ItemContainerStyle>
                                                                    <Style TargetType="MenuItem" BasedOn="{StaticResource DarkMenuItem}">
                                                                        <Setter Property="Header" Value="{Binding}" />
                                                                        <Setter Property="IsChecked">
                                                                            <Setter.Value>
                                                                                <MultiBinding Converter="{StaticResource IsCategoryAssignedConverter}">
                                                                                     <Binding RelativeSource="{RelativeSource AncestorType=ContextMenu}" Path="PlacementTarget.DataContext" />
                                                                                     <Binding Path="." />
                                                                                </MultiBinding>
                                                                            </Setter.Value>
                                                                        </Setter>

                                                                        <Setter Property="Command" Value="{Binding PlacementTarget.Tag.ToggleCategoryCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                                                        <Setter Property="CommandParameter">
                                                                            <Setter.Value>
                                                                                <MultiBinding Converter="{StaticResource TupleConverter}">
                                                                                    <Binding RelativeSource="{RelativeSource AncestorType=ContextMenu}" Path="PlacementTarget.DataContext" />
                                                                                    <Binding Path="." />
                                                                                </MultiBinding>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                    </Style>
                                                                </ContextMenu.ItemContainerStyle>
                                                            </ContextMenu>
                                                        </Border.ContextMenu>

                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="110" />
                                                                <ColumnDefinition Width="*" />
                                                                <ColumnDefinition Width="Auto" />
                                                            </Grid.ColumnDefinitions>


                                                                <Grid Width="100" Height="100">
                                                                    <!--  thumbnail container  -->
                                                                    <Border
                                                                        x:Name="ThumbHost"
                                                                        Background="{DynamicResource SecondaryBackgroundBrush}"
                                                                        BorderBrush="{DynamicResource BorderBrush}"
                                                                        BorderThickness="1"
                                                                        CornerRadius="8">

                                                                        <Grid>
                                                                            <Image Source="{Binding CurrentThumbnailPath, Converter={StaticResource PathToImageConverter}}" Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality" />

                                                                            <!--  Prev  -->
                                                                            <Button
                                                                                Width="26"
                                                                                Height="26"
                                                                                Margin="6,0,0,0"
                                                                                HorizontalAlignment="Left"
                                                                                VerticalAlignment="Center"
                                                                                Click="PrevThumb_Click"
                                                                                Style="{StaticResource FlatIconButton}">
                                                                                <Button.Visibility>
                                                                                    <MultiBinding Converter="{StaticResource HoverAndMultiThumbsToVisibilityConverter}">
                                                                                        <Binding ElementName="ThumbHost" Path="IsMouseOver" />
                                                                                        <Binding Path="HasMultipleThumbnails" />
                                                                                    </MultiBinding>
                                                                                </Button.Visibility>
                                                                                <materialDesign:PackIcon
                                                                                    Width="18"
                                                                                    Height="18"
                                                                                    Kind="ChevronLeft" />
                                                                            </Button>

                                                                            <!--  Next  -->
                                                                            <Button
                                                                                Width="26"
                                                                                Height="26"
                                                                                Margin="0,0,6,0"
                                                                                HorizontalAlignment="Right"
                                                                                VerticalAlignment="Center"
                                                                                Click="NextThumb_Click"
                                                                                Style="{StaticResource FlatIconButton}">
                                                                                <Button.Visibility>
                                                                                    <MultiBinding Converter="{StaticResource HoverAndMultiThumbsToVisibilityConverter}">
                                                                                        <Binding ElementName="ThumbHost" Path="IsMouseOver" />
                                                                                        <Binding Path="HasMultipleThumbnails" />
                                                                                    </MultiBinding>
                                                                                </Button.Visibility>
                                                                                <materialDesign:PackIcon
                                                                                    Width="18"
                                                                                    Height="18"
                                                                                    Kind="ChevronRight" />
                                                                            </Button>

                                                                            <!--  Counter  -->
                                                                            <Border
                                                                                Margin="0,0,0,6"
                                                                                Padding="6,2"
                                                                                HorizontalAlignment="Center"
                                                                                VerticalAlignment="Bottom"
                                                                                Background="#66000000"
                                                                                CornerRadius="10">
                                                                                <Border.Visibility>
                                                                                    <MultiBinding Converter="{StaticResource HoverAndMultiThumbsToVisibilityConverter}">
                                                                                        <Binding ElementName="ThumbHost" Path="IsMouseOver" />
                                                                                        <Binding Path="HasMultipleThumbnails" />
                                                                                    </MultiBinding>
                                                                                </Border.Visibility>

                                                                                <TextBlock FontSize="11" Foreground="White">
                                                                                    <TextBlock.Text>
                                                                                        <MultiBinding StringFormat="{}{0}/{1}">
                                                                                            <Binding Converter="{StaticResource PlusOneConverter}" Path="SelectedThumbnailIndex" />
                                                                                            <Binding Path="TypeThumbnailPaths.Count" />
                                                                                        </MultiBinding>
                                                                                    </TextBlock.Text>
                                                                                </TextBlock>
                                                                            </Border>

                                                                        </Grid>
                                                                    </Border>
                                                                </Grid>





                                                            <!--  Info  -->
                                                            <StackPanel Grid.Column="1" Margin="12,0,12,0">
                                                                <TextBlock
                                                                    FontSize="15"
                                                                    FontWeight="Bold"
                                                                    Foreground="{DynamicResource ForegroundBrush}"
                                                                    Text="{Binding DisplayName}" />

                                                                <StackPanel Margin="0,4,0,0" Orientation="Horizontal">
                                                                    <TextBlock
                                                                        Foreground="{DynamicResource ForegroundBrush}"
                                                                        Opacity="0.80"
                                                                        Text="{Binding Category}" />
                                                                    <TextBlock
                                                                        Foreground="{DynamicResource ForegroundBrush}"
                                                                        Opacity="0.40"
                                                                        Text="  |  " />
                                                                    <TextBlock
                                                                        Foreground="{DynamicResource ForegroundBrush}"
                                                                        Opacity="0.70"
                                                                        Text="{Binding RelativePath}" />

                                                                </StackPanel>
                                                                <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                                                                    <TextBlock
                                                                        Foreground="{DynamicResource ForegroundBrush}"
                                                                        Opacity="0.70"
                                                                        Text="Revit: " />
                                                                    <TextBlock
                                                                        Foreground="{DynamicResource ForegroundBrush}"
                                                                        Opacity="0.85"
                                                                        Text="{Binding SavedInRevitVersion}" />
                                                                    <TextBlock
                                                                        Foreground="{DynamicResource ForegroundBrush}"
                                                                        Opacity="0.40"
                                                                        Text="  |  " />
                                                                    <TextBlock
                                                                        Foreground="{DynamicResource ForegroundBrush}"
                                                                        Opacity="0.70"
                                                                        Text="Muudetud: " />
                                                                    <TextBlock
                                                                        Foreground="{DynamicResource ForegroundBrush}"
                                                                        Opacity="0.85"
                                                                        Text="{Binding LastModifiedLocal}" />
                                                                </StackPanel>

                                                                <TextBlock
                                                                    Margin="0,8,0,0"
                                                                    Foreground="{DynamicResource ForegroundBrush}"
                                                                    Opacity="0.85"
                                                                    Text="{Binding TypeNames, Converter={StaticResource TypeListConverter}}"
                                                                    TextWrapping="Wrap" />
                                                            </StackPanel>

                                                            <!--  User categories (multi) -> Tags  -->
                                                            <StackPanel Grid.Column="2" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,5,0">
                                                                <!--  Warning triangle  -->
                                                                <materialDesign:PackIcon
                                                                    Width="18"
                                                                    Height="18"
                                                                    Margin="0,0,0,6"
                                                                    HorizontalAlignment="Right"
                                                                    VerticalAlignment="Top"
                                                                    Foreground="#FFC107"
                                                                    Kind="AlertCircleOutline"
                                                                    Visibility="{Binding IsLoadedInProject, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                                    ToolTip="Laetud projekti" />
                                                                    
                                                                <ItemsControl ItemsSource="{Binding UserCategories}" Margin="0,5,0,0">
                                                                    <ItemsControl.ItemsPanel>
                                                                        <ItemsPanelTemplate>
                                                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" />
                                                                        </ItemsPanelTemplate>
                                                                    </ItemsControl.ItemsPanel>
                                                                    <ItemsControl.ItemTemplate>
                                                                        <DataTemplate>
                                                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,6,0">
                                                                                <materialDesign:PackIcon Kind="TagOutline" Width="14" Height="14" VerticalAlignment="Center" Margin="0,0,4,0" Foreground="{DynamicResource IconBrush}"/>
                                                                                <TextBlock Text="{Binding}" FontSize="11" Foreground="{DynamicResource ForegroundBrush}" VerticalAlignment="Center" />
                                                                            </StackPanel>
                                                                        </DataTemplate>
                                                                    </ItemsControl.ItemTemplate>
                                                                </ItemsControl>
                                                            </StackPanel>
                                                        </Grid>
                                                        
                                                        <Border.Triggers>
                                                            <EventTrigger RoutedEvent="Border.Loaded" />
                                                        </Border.Triggers>
                                                    </Border>
                                                    
                                                    <DataTemplate.Triggers>
                                                        <!-- Selection trigger -->
                                                        <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListViewItem}}" Value="True">
                                                            <Setter TargetName="CardBorder" Property="BorderBrush" Value="#4A5568" />
                                                        </DataTrigger>
                                                    </DataTemplate.Triggers>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </Border>

                                    <!--  Bottom bar  -->
                                    <Border
                                        Grid.Row="2"
                                        Margin="0,10,0,0"
                                        Padding="5"
                                        Background="{DynamicResource SecondaryBackgroundBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <CheckBox
                                                Grid.Column="0"
                                                VerticalAlignment="Center"
                                                Content="Pärast laadimist aktiveeri paigutus"
                                                IsChecked="{Binding PlaceAfterLoading}"
                                                Style="{StaticResource CustomCheckBox}" />

                                            <Button
                                                Grid.Column="1"
                                                Width="180"
                                                Height="40"
                                                Margin="0"
                                                Command="{Binding LoadSelectedCommand}"
                                                Content="Laadi valitud"
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Style="{StaticResource CustomActionButtonStyle}" />
                                        </Grid>
                                    </Border>
                                </Grid>
                            </TabItem>

                            <!--  =====================  -->
                            <!--  SEADED  -->
                            <!--  =====================  -->
                            <TabItem Header="Seaded">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <!--  Library root  -->
                                    <Border
                                        Grid.Row="0"
                                        Margin="0,0,0,10"
                                        Padding="10">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="{DynamicResource SecondaryBackgroundBrush}" />
                                                <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
                                                <Setter Property="BorderThickness" Value="1" />
                                                <Setter Property="CornerRadius" Value="10,10,10,10" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ElementName=KoguTab, Path=IsMouseOver}" Value="True">
                                                        <Setter Property="CornerRadius" Value="0,10,10,10" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="120" />
                                            </Grid.ColumnDefinitions>

                                            <TextBox
                                                Grid.Column="0"
                                                Height="28"
                                                VerticalContentAlignment="Center"
                                                Style="{StaticResource CustomTextBoxStyle}"
                                                Text="{Binding LibraryRoot}"
                                                ToolTip="Teegi juurkaust" />

                                            <Button
                                                Grid.Column="1"
                                                Width="100"
                                                Height="28"
                                                Margin="10,0,0,0"
                                                Command="{Binding BrowseLibraryRootCommand}"
                                                Content="Sirvi"
                                                Style="{StaticResource CustomActionButtonStyle}" />
                                        </Grid>
                                    </Border>

                                    <!--  Thumbnail + index actions  -->
                                    <Border
                                        Grid.Row="1"
                                        Margin="0,0,0,10"
                                        Padding="10"
                                        Background="{DynamicResource SecondaryBackgroundBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="240" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <TextBox
                                                Grid.Column="0"
                                                Height="28"
                                                VerticalContentAlignment="Center"
                                                Style="{StaticResource CustomTextBoxStyle}"
                                                Text="{Binding ThumbnailPixelSize}"
                                                ToolTip="Pisipildi suurus pikslites" />

                                            <StackPanel
                                                Grid.Column="1"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                Orientation="Horizontal">
                                                <Button
                                                    Width="180"
                                                    Height="34"
                                                    Margin="0,0,10,0"
                                                    Command="{Binding BuildIndexCommand}"
                                                    Content="Koosta indeks"
                                                    Style="{StaticResource CustomActionButtonStyle}" />
                                                <Button
                                                    Width="260"
                                                    Height="34"
                                                    Margin="0,0,0,0"
                                                    Command="{Binding GenerateThumbsAndIndexCommand}"
                                                    Content="Genereeri pisipildid + indeks"
                                                    Style="{StaticResource CustomActionButtonStyle}" />
                                            </StackPanel>
                                        </Grid>
                                    </Border>

                                    <!--  User categories manager  -->
                                    <Grid Grid.Row="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="300" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <Border
                                            Grid.Column="0"
                                            Padding="10"
                                            Background="{DynamicResource SecondaryBackgroundBrush}"
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="10">

                                            <StackPanel>
                                                <TextBlock
                                                    Margin="0,0,0,10"
                                                    FontSize="16"
                                                    FontWeight="Bold"
                                                    Foreground="{DynamicResource ForegroundBrush}"
                                                    Text="Kasutajakategooriad" />

                                                <DockPanel Margin="0,0,0,10">
                                                    <Button
                                                        DockPanel.Dock="Right"
                                                        Width="80"
                                                        Height="28"
                                                        Margin="10,0,0,0"
                                                        Command="{Binding AddUserCategoryCommand}"
                                                        Content="Lisa"
                                                        Style="{StaticResource CustomActionButtonStyle}" />
                                                    <TextBox
                                                        Height="28"
                                                        VerticalContentAlignment="Center"
                                                        Style="{StaticResource CustomTextBoxStyle}"
                                                        Text="{Binding NewUserCategory, UpdateSourceTrigger=PropertyChanged}"
                                                        ToolTip="Lisa uus kategooria" />
                                                </DockPanel>

                                                <ListBox
                                                    Height="260"
                                                    Background="{DynamicResource PrimaryBackgroundBrush}"
                                                    BorderBrush="{DynamicResource BorderBrush}"
                                                    BorderThickness="1"
                                                    Foreground="{DynamicResource ForegroundBrush}"
                                                    ItemsSource="{Binding UserCategories}"
                                                    SelectedItem="{Binding SelectedUserCategory, Mode=TwoWay}" />

                                                <Button
                                                    Height="32"
                                                    Margin="0,10,0,0"
                                                    Command="{Binding RemoveUserCategoryCommand}"
                                                    Content="Eemalda valitud"
                                                    Style="{StaticResource CustomActionButtonStyle}" />
                                            </StackPanel>
                                        </Border>

                                        <Border
                                            Grid.Column="1"
                                            Margin="10,0,0,0"
                                            Padding="10"
                                            Background="{DynamicResource SecondaryBackgroundBrush}"
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="10">
                                            <StackPanel>
                                                <TextBlock
                                                    Margin="0,0,0,10"
                                                    FontSize="16"
                                                    FontWeight="Bold"
                                                    Foreground="{DynamicResource ForegroundBrush}"
                                                    Text="Märkused" />

                                                <TextBlock
                                                    Foreground="{DynamicResource ForegroundBrush}"
                                                    Opacity="0.85"
                                                    Text="Kasutajakategooriad salvestatakse faili settings.json. Iga perekonna real saab valida mitu kategooriat ning need salvestatakse index.json faili."
                                                    TextWrapping="Wrap" />

                                                <TextBlock
                                                    Margin="0,10,0,0"
                                                    Foreground="{DynamicResource ForegroundBrush}"
                                                    Opacity="0.75"
                                                    Text="Soovitus: hoia kategooriate nimekiri lühike ja ühtses vormis (nt “Valgustid”, “Pistikupesad”, “Kaablirennid”)."
                                                    TextWrapping="Wrap" />
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                </Grid>
                            </TabItem>
                        </TabControl>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <!--  Resize edges (same pattern you use)  -->
        <Border
            x:Name="LeftEdge"
            Width="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Stretch"
            Background="Transparent"
            Cursor="SizeWE"
            MouseEnter="LeftEdge_MouseEnter"
            MouseLeave="Edge_MouseLeave"
            MouseLeftButtonDown="LeftEdge_MouseLeftButtonDown" />

        <Border
            x:Name="RightEdge"
            Width="9"
            HorizontalAlignment="Right"
            VerticalAlignment="Stretch"
            Background="Transparent"
            Cursor="SizeWE"
            MouseEnter="RightEdge_MouseEnter"
            MouseLeave="Edge_MouseLeave"
            MouseLeftButtonDown="RightEdge_MouseLeftButtonDown" />

        <Border
            x:Name="BottomEdge"
            Height="5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Bottom"
            Background="Transparent"
            Cursor="SizeNS"
            MouseEnter="BottomEdge_MouseEnter"
            MouseLeave="Edge_MouseLeave"
            MouseLeftButtonDown="BottomEdge_MouseLeftButtonDown" />

        <Border
            x:Name="BottomLeftCorner"
            Width="10"
            Height="10"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Background="Transparent"
            Cursor="SizeNESW"
            MouseEnter="BottomLeftCorner_MouseEnter"
            MouseLeave="Edge_MouseLeave"
            MouseLeftButtonDown="BottomLeftCorner_MouseLeftButtonDown" />

        <Border
            x:Name="BottomRightCorner"
            Width="10"
            Height="10"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Background="Transparent"
            Cursor="SizeNWSE"
            MouseEnter="BottomRightCorner_MouseEnter"
            MouseLeave="Edge_MouseLeave"
            MouseLeftButtonDown="BottomRightCorner_MouseLeftButtonDown" />

    </Grid>
</Window>
